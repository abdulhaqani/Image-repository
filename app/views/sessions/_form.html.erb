<!-- Form -->
<%= form_with(scope: :session, url: login_path, local: true) do |f| %>
<div class="jumbotron text-dark m-4">
  <div class="form-group row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %>
      <br />
    <div class="col-sm-10">
      <%= f.email_field :email, class: "col-sm-12 form-control",  placeholder: "Email address" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %>
      <br />
    <div class="col-sm-10">
      <%= f.password_field :password, class: "col-sm-12 form-control", placeholder: "Password"%>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.submit "Login", class: "btn btn-success" %>
    </div>
  </div>
  
</div>
<% end %>