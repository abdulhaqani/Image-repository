
<div class="card m-auto" style="width: 40%">
  <%= form_tag charges_path, class: "text-center mt-4 mb-4" do %>
    <article class="text-center">
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount text-dark">
        <h1>Make a payment</h1>
        <span>Amount: <%= @charge.image.price %> </span>
      </label>
    </article>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description=<%= @charge.image.title %>
            data-amount=<%= @charge.image.price * 100%>
            data-locale="auto"></script>
  <% end %>
</div>