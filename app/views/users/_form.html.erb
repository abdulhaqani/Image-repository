<!-- Errors -->
<% if @user.errors.any? %>
  <h3 class="text-center m-4">The following errors prevented the user from being saved</h3>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li class="text-center"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<!-- Form -->
<%= form_with(model: @user, local: true) do |f| %>
<div class="jumbotron text-dark m-4">
  <div class="form-group row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %>
      <br />
    <div class="col-sm-10">
      <%= f.email_field :email, class: "col-sm-12 form-control",  placeholder: "Email address" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :username, class: "col-sm-2 col-form-label" %>
      <br />
    <div class="col-sm-10">
      <%= f.text_field :username, class: "col-sm-12 form-control", placeholder: "Username" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %>
      <br />
    <div class="col-sm-10">
      <%= f.password_field :password, class: "col-sm-12 form-control", placeholder: "Password"%>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.submit "Submit", class: "btn btn-success" %>
    </div>
  </div>
  
</div>
<% end %>