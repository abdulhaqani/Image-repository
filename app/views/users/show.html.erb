<div class="row mt-4">
  <div class="apple_pagination m-auto shadow">
    <div class="page_info">
      <%= page_entries_info @images %>
    </div>
    <%= will_paginate @images, :container => false %>
  </div>
</div>
<div class="row">
  <% if current_user == @user %>
    <%= link_to 'Edit Account', edit_user_path(@user), class: "image-link text-center col-sm-4 mb-2" %>
  <% else %>
    <div class="col-sm-4"></div>
  <% end %>
  <div class="mt-4 col-sm-4 text-center">
    <div class="show-title"><%= @user.username %></div>
  </div>
  <div class="col-sm-4"></div>

<div class="row">
  <% @user.images.each do |image| %>
    <% if image.public || current_user == image.user %>

      <div class="image-container">
        <h3 class="text-center"><%= image.title %></h3>

        <%= link_to image_tag(image.source, class: "image-style"), image, class: "image-style", style: "color: whitesmoke;" %>
        
        <div class="image-links">
          <%= link_to 'View Image', image, class: "float-left image-link"%>
          <% if current_user == image.user %>
            <%= link_to 'Edit Image', edit_image_path(image), class: "float-right image-link"%>
          <% end %>
        </div>
        <div class="price">
          Price: $<%= '%.2f' % image.price %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
