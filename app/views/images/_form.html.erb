<!-- Errors -->
<% if @image.errors.any? %>
  <h3 class="text-center m-4">The following errors prevented the image from being saved</h3>
  <ul>
    <% @image.errors.full_messages.each do |msg| %>
      <li class="text-center"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<!-- Form -->
<%= form_with(model: @image, local: true) do |f| %>
<div class="jumbotron text-dark m-4">

  <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 col-form-label" %>
      <br />
    <div class="col-sm-10">
      <%= f.text_field :title, class: "col-sm-12 form-control", placeholder: "title"%>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :source, class: "col-sm-2 col-form-label" %>
      <br />
    <div class="col-sm-10">
      <%= f.text_field :source, class: "col-sm-12 form-control", placeholder: "image source" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :price, class: "col-sm-2 col-form-label" %>
      <br />
    <div class="col-sm-10">
      <%= f.number_field :price, class: "col-sm-12 form-control", placeholder: "0.00" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :inventory, class: "col-sm-2 col-form-label" %>
      <br />
    <div class="col-sm-10">
      <%= f.number_field :inventory, class: "col-sm-12 form-control", placeholder: "0" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :public, class: "col-sm-2 col-form-label" %>
    <div class="col m-auto">
      <%= f.check_box :public, {}, 1, 2 %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.submit "Save Image", class: "btn btn-success" %>
    </div>
  </div>
  
</div>
<% end %>