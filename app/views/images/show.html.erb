<div class="show-container">
  <h1 class="mt-4 show-title"><%= @image.title %></h1>
  <%= image_tag(@image.source, class: "show-image") %>
  <% if current_user == @image.user %>
    <div class="image-links mt-4">
      <%= link_to 'Edit Image', edit_image_path(@image), class: "float-left image-link"%>

      <%= link_to 'Delete', image_path(@image), method: :delete, data: {confirm: "Are you sure?"}, class: "float-right image-link"%>
    </div>
  <% end %>
  
    <div class="row">
      <div class="col-sm-6 text-center">
        <button class="btn-success purchase-link mb-5 mt-2">
          <h5 class="price m-3 image-link">
            <%= link_to 'Purchase $%.2f' % @image.price, new_charge_path %>
          </h5>
        </button>
      </div>
      <div class="col-sm-6 text-center">
        <h5 class="mt-4">
          inventory: <%= @image.inventory.to_int() %>
        </h5>
      </div>
    </div>
    
</div>